<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/welcome_label"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="477dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="34dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="377dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_label" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:contentDescription="@string/search_icon"
                    app:srcCompat="@drawable/search_icon" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="34dp"
                android:layout_marginTop="55dp"
                android:text="@string/popular_label"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="533dp"
                android:layout_height="233dp"
                android:layout_gravity="center"
                android:layout_marginTop="34dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/bananas" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/frambuesas" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/cerezas" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/pina" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/fresas" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/kiwis" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/uvas" />
                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="34dp"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:layout_width="233dp"
                    android:layout_height="match_parent"
                    android:text="@string/all_categories"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="21sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:srcCompat="@drawable/jump"
                    android:contentDescription="@string/jump"
                    android:layout_marginLeft="13dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginTop="55dp"
                android:gravity="center">

                <Button
                    android:layout_width="233dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="34dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/profile_btn"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="34dp" />

                <Button
                    android:layout_width="233dp"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/settings_btn"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="55dp"
                android:layout_marginStart="21dp"
                android:gravity="start">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="@string/search_icon"
                    app:srcCompat="@drawable/logout" />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="@string/label_logout"
                    android:textColor="#000000"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>